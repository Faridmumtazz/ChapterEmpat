<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="15sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_namaapk"
                    android:text="Lintasi Academy"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_namapt"
                    android:layout_below="@+id/tv_namaapk"
                    android:text="Pt. Lintasi Academy"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_toRightOf="@+id/tv_namapt"
                    android:layout_below="@+id/tv_namaapk"
                    android:layout_marginLeft="10dp"
                    android:text="Edukasi"
                    android:textStyle="italic|bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_below="@+id/tv_namapt"
                    android:text="85"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_dw"
                    android:layout_below="@+id/tv_namapt"
                    android:layout_toRightOf="@+id/tv_rate"
                    android:layout_marginLeft="20dp"
                    android:text="85"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_pengguna"
                    android:layout_below="@+id/tv_namapt"
                    android:layout_toRightOf="@+id/tv_dw"
                    android:layout_marginLeft="20dp"
                    android:text="185"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>